<div class="container my-3">
  <h1 class="text-center">My Favorite Locations</h1>
  <div id="favorites-list">
    <% if @favorites.any? %>
      <div class="cards">
        <% @favorites.each do |fav| %>
          <div id="<%= dom_id(fav) %>" class="card-trip my-3 position-relative brdr-gray shadow">
            <!-- Delete (top-right) -->
            <%= link_to favorite_path(fav),
                      data: { turbo_method: :delete, turbo_confirm: "Remove #{fav.name} from favorites?" },
                      class: "position-absolute top-0 end-0 m-2 text-danger fs-4" do %>
              <i class="fa-solid fa-circle-xmark"></i>
            <% end %>
            <!-- Clickable content (image + text only) -->
            <%= link_to location_path(fav), class: "d-block text-decoration-none text-dark" do %>
              <% if fav.photos.attached? %>
                <%= cl_image_tag fav.photos.first.key,
                     class: "card-img-top w-100 object-fit-cover",
                     alt: fav.name %>
              <% else %>
                <%= image_tag "no_img.png",
                  class: "card-img-top w-100 h-100 object-fit-cover",
                  alt: "No image available" %>
              <% end %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= fav.name %></h2>
                  <p><%= fav.category %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center my-5">You havenâ€™t favorited any locations yet.</p>
    <% end %>
  </div>
</div>
