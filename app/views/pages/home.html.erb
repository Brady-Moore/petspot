<div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
  <h1>PetSpot</h1>
    <div class="carousel-item active">
      <img class="d-block w-100" <%= image_tag "mathew-smith-gM6QroS17aw-unsplash.jpg",
              class: "d-block w-100",
              alt: "Third slide" %> alt="First slide">
      <p class="p-1">Find dog-friendly spots near you</p>
      <p class="p-2">Cafés, Parks & more</p>
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" <%= image_tag "rui-alves-bUueTEY-FOc-unsplash.jpg",
