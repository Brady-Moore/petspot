<div id="carousel" class="carousel slide" data-bs-ride="carousel">
  <h1>PetSpot</h1>
    <div class="carousel-inner">
      <% @locations.each_with_index do |location, index| %>
        <div class="carousel-item home-img <%= index == 0 ? " active" : "" %>">
          <% if location.photos.attached? %>
            <%= cl_image_tag location.photos.first.key, class: "d-block", alt: location.name %>
          <% else %>
            <%= image_tag "no_img.png", class: "d-block w-100", alt: location.name %>
          <% end %>
          <p class="p-1">Find dog-friendly spots near you</p>
          <p class="p-2">Caf√©s, Parks & more.</p>
        </div>
     <% end %>
   </div>
 </div>
<%= render "locations/search", groups: @groups %>
<div class="container scrollable-content">
  <h3 class="mt-0">Most popular </h3>
  <div class="row flex-nowrap overflow-scroll">
    <% @popular.each do |location| %>
      <div class="col-6 col-md-6 scol-lg-4 flex-grow-1">
        <%= render "locations/card", location: location %>
      </div>
    <% end %>
  </div>
  <h3 class="mt-4">Most recent </h3>
  <div class="row flex-nowrap overflow-scroll">
    <% @recent.each do |location| %>
      <div class="col-6 col-md-6 scol-lg-4 flex-grow-1">
        <%= render "locations/card", location: location %>
      </div>
    <% end %>
  </div>
</div>
