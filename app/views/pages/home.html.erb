    </div>
    <div class="carousel-item">
      <img class="d-block w-100" <%= image_tag "daniel-brunsteiner-_jd5ryWK5J4-unsplash.jpg",
              class: "d-block w-100",
              alt: "Third slide" %> alt="Third slide">
       <p class="p-1">From coffee to off-leash — discover it all</p>
    </div>
  </div>
<%= render "locations/search", groups: @groups %>
<div class="container scrollable-content">
  <h3 class="mt-0">Most popular </h3>
  <div class="row flex-nowrap overflow-scroll">
    <% @popular.each do |location| %>
      <div class="col-6 col-md-6 scol-lg-4 flex-grow-1">
        <%= render "locations/card", location: location %>
      </div>
    <% end %>
  </div>
  <h3 class="mt-4">Most recent </h3>
  <div class="row flex-nowrap overflow-scroll">
    <% @recent.each do |location| %>
      <div class="col-6 col-md-6 scol-lg-4 flex-grow-1">
        <%= render "locations/card", location: location %>
      </div>
    <% end %>
  </div>
</div>
