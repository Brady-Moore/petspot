<div class="auth container d-flex flex-column align-items-center pt-4 pb-5">
  <h2 class="auth-title text-center my-4">Log in to PetSpot</h2>
  <div class="w-100 mt-3 pt-3" style="max-width:360px;">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { class: "form-control form-control-lg rounded-pill auth-input", placeholder: "email" },
              label: false %>
      </div>
      <div class="mb-3">
        <%= f.input :password,
              required: true,
              input_html: { class: "form-control form-control-lg rounded-pill auth-input", placeholder: "password" },
              label: false %>
      </div>
      <div class="d-grid mb-3">
        <%= f.button :submit, "Log in", class: "btn btn-lg rounded-pill auth-cta" %>
      </div>
    <% end %>
    <div class="d-flex justify-content-between align-items-center small text-muted">
      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= check_box_tag :remember_me, 1, false, class: "form-check-input", id: "remember_me" %>
          <%= label_tag :remember_me, "Remember Me", class: "form-check-label" %>
        </div>
      <% end %>
      <% if devise_mapping.recoverable? %>
        <%= link_to "Forgot Password", new_password_path(resource_name),
              class: "text-muted text-decoration-none" %>
      <% end %>
    </div>
    <p class="text-center mt-5">Don't have an account?</p>
    <!-- Sign up button -->
    <div class="d-grid mt-3">
      <%= link_to "Sign up", new_user_registration_path,
            class: "btn btn-lg rounded-pill auth-cta-secondary border" %>
    </div>
  </div>
</div>
