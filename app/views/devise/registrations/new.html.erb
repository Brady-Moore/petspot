<div class="auth container d-flex flex-column align-items-center pt-4 pb-5">
  <h2 class="auth-title text-center my-4">Create an account</h2>
  <div class="w-100 mt-4 p-2" style="max-width:360px;">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="mb-3">
        <%= f.input :name,
              required: true,
              input_html: { class: "form-control form-control-lg rounded-pill auth-input", placeholder: "name" },
              label: false %>
      </div>
      <div class="mb-3">
        <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { class: "form-control form-control-lg rounded-pill auth-input", placeholder: "email" },
              label: false %>
      </div>
      <div class="mb-3">
        <%= f.input :password,
              required: true,
              input_html: { class: "form-control form-control-lg rounded-pill auth-input", placeholder: "password" },
              label: false,
              hint: false %>
      </div>
      <div class="mb-3">
        <%= f.input :password_confirmation,
              required: true,
              input_html: { class: "form-control form-control-lg rounded-pill auth-input", placeholder: "confirm password" },
              label: false %>
      </div>
      <div class="d-grid">
        <%= f.button :submit, "Register", class: "btn btn-lg rounded-pill auth-cta" %>
      </div>
    <% end %>
  </div>
</div>
